<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymTracker" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_lignt</item>
        <item name="colorPrimaryDark">@color/gray_drak</item>
        <item name="colorAccent">@color/red_200</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/my_drawable</item>
    </style>
    <style name="Theme.GymTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GymTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GymTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="background">@color/red_200</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>