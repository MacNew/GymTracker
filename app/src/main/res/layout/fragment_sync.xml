<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        xmlns:card_view="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <LinearLayout
               android:layout_margin="4dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="2"
               >
               <TextView
                   android:id="@+id/first_name"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/firstName"
                   android:textSize="@dimen/text_size"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:id="@+id/lastName"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/last_name"
                   android:textSize="@dimen/text_size"
                   android:textColor="@color/black"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_margin="4dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/email"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/email"
                   android:textSize="@dimen/text_size"
                   android:textColor="@color/black"
                   />
           </LinearLayout>
            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/account_type_lable"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/accountType"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/account_type"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/red_200"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/last_payment_date_label"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/last_payment_date"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/last_payment_date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2021-04-11"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/due_date_lable"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/due_date"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/due_date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2021-04-11"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="$ 10$ /month"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cv_parent"
        android:background="@color/example_3_blue"
        android:id="@+id/btn_paypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/red_200"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/sync"
        android:layout_below="@+id/btn_paypal"
        android:id="@+id/sync_btn"
        android:src="@drawable/ic_baseline_sync_24"
        android:gravity="center"
        />
   <TextView
       android:textColor="@color/black"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/sync_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Syn data on Data base"
       />
   <ProgressBar
       android:visibility="gone"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/sync_progressbar"
       />
</RelativeLayout>