<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="match_parent">
         <LinearLayout
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Weight"
             android:textColor="@color/red_200"
             android:textSize="16dp"
             />
             <com.shawnlin.numberpicker.NumberPicker
                 android:layout_marginTop="2dp"
                 xmlns:app="http://schemas.android.com/tools"
                 android:id="@+id/number_picker_weight"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:np_width="64dp"
                 app:np_height="180dp"
                 app:np_dividerColor="@color/red_200"
                 app:np_max="59"
                 app:np_min="0"
                 app:np_selectedTextColor="@color/gray_drak"
                 app:np_selectedTextSize="16dp"
                 app:np_textColor="@color/black"
                 app:np_textSize="16dp"
                 app:np_value="3" />
         </LinearLayout>
         <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reps"
                    android:textColor="@color/red_200"
                    android:textSize="16dp"
                    />
                <com.shawnlin.numberpicker.NumberPicker
                    android:layout_marginTop="2dp"
                    xmlns:app="http://schemas.android.com/tools"
                    android:id="@+id/number_picker_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:np_width="64dp"
                    app:np_height="180dp"
                    app:np_dividerColor="@color/red_200"
                    app:np_max="59"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/gray_drak"
                    app:np_selectedTextSize="16dp"
                    app:np_textColor="@color/black"
                    app:np_textSize="16dp"
                    app:np_value="3" />
            </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circular_image_shape_button"
                android:src="@drawable/ic_baseline_check_24" />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>