<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        xmlns:card_view="http://schemas.android.com/tools">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_exercise_image_last_summery"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_barbell_bench_press"
                app:civ_border_color="@color/red_200"
                app:civ_border_width="2dp" />
            <TextView
                android:layout_marginLeft="16dp"
                android:padding="2dp"
                android:id="@+id/tv_exercise_list_name_row"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="chest"
                android:layout_toRightOf="@+id/iv_exercise_image_last_summery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:padding="2dp"
                android:id="@+id/exercise_name_row"
                android:gravity="center"
                android:textColor="@color/red_200"
                android:textSize="22dp"
                android:text="chest"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv_exercise_list_name_row"
                android:layout_toRightOf="@+id/iv_exercise_image_last_summery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_date_last_summery_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2021 May 19"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/rv_exercise_list_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_parent" />

</RelativeLayout>